{
    "information_for_contributors": [
        "This is information for contributors..."
    ],
    "Name": "CreoConfig",
    "scopeName": "source.pro-editor",
    "fileTypes": [".pro",".sup"],
    "patterns": [
        {
            "include": "#commands"
        },
        {
            "include": "#comments"
        },
        {
            "include": "#constants"
        },
        {
            "include": "#controls"
        },
        {
            "include": "#escaped_characters"
        },
        {
            "include": "#labels"
        },
        {
            "include": "#numbers"
        },
        {
            "include": "#strings"
        },
        {
            "include": "#variables"
        }
    ],
    "repository": {
        "commands": {
            "patterns": [
                {
                    "name": "keyword.command.pro-editor",
                    "match": "~\\s\\S+\\s"
                }
            ]
        },
        "comments": {
            "patterns": [
                {
                    "begin": "\\!(|\\s)",
                    "end": "\\n",
                    "name": "comment.line.comment.pro-editor"
                }
            ]
        },
        "constants": {
            "patterns": [
                {
                    "name": "keyword.constant.language.pro-editor",
                    "match": "\\b(?i:(yes|no|true|false))\\b"
                }
            ]
        },
        "controls": {
            "patterns": [
                {
                    "match": "(mapkey\\s\\S+|mapkey\\(continued\\)\\s|\\%\\S+?[^\\;])",
                    "name": "keyword.control.statement.pro-editor",
                    "patterns": [
                        {
                            "include": "#escaped_characters"
                        }
                    ]
                }
            ]
        },
        "escaped_characters": {
            "patterns": [
                {
                    "match": "(\\;|\\;\\n|\\;\\\\\\n)",
                    "name": "constant.character.escape.pro-editor"
                }
            ]
        },
        "labels": {
            "patterns": [
                {
                    "match": "(\\@MAPKEY_NAME|\\@MAPKEY_LABEL)",
                    "captures": {
                        "1": {
                            "name": "storage.modifier.pro-editor"
                        },
                        "2": {
                            "name": "keyword.other.special-method.pro-editor"
                        }
                    }
                }
            ]
        },        
        "numbers": {
            "patterns": [
                {
                    "match": "\\d",
                    "name": "constant.numeric.pro-editor"
                }
            ]
        },
        "strings": {
            "patterns": [
                {
                    "begin": "\\`",
                    "beginCaptures": {
                        "0": {
                            "name": "punctuation.definition.string.begin.pro-editor"
                        }
                    },
                    "end": "(\\`)|(\\n)",
                    "endCaptures": {
                        "1": {
                            "name": "punctuation.definition.string.end.pro-editor"
                        },
                        "2": {
                            "name": "invalid.illegal.newline.pro-editor"
                        }
                    },
                    "name": "string.interpolated.pro-editor"
                }
            ]
        },
        "variables": {
            "patterns": [
                {
                    "include": "#variable"
                }
            ]
        },
        "variable": {
            "patterns": [
                {
                    "match": "(\\#|\\$)[\\w\\s/]+",
                    "captures": {
                        "1": {
                            "name": "punctuation.definition.variable.pro-editor"
                        }
                    },
                    "name": "variable.parameter.pro-editor"
                }
            ]
        }
    }
}