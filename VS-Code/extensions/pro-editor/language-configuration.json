{
    "comments": {
        "lineComment": "! "
    },
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ],
    "autoClosingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        { "open": "\"", "close": "\"", "notIn": ["string"] }
    ],
    "surroundingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["%", "%"],
        ["\"", "\""]
    ],
    "folding": {
        "markers": {
            "start": "^\\s*(! |!)\\s*#region",
            "end": "^\\s*(! |!)\\s*#endregion"
        }
    }
}